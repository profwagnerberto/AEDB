    switch(opcao){
      case 1:
        soma = 0;
        for(i=0;i<tamanho;i++)
          soma += Idade[i];
        media = soma / tamanho;
        printf(" * \n Média: %f \n",media);
        printf(" * \n * \n * \n");
        break;
      case 2:
        LerIdade(&idadeABuscar);
        i = 0;
        while(i<tamanho){

          i++;
        }
        for(i=0;i<tamanho;i++)

        printf("Encerrando... \n");
        printf(" * \n * \n * \n");
        break;
      case 3:
        LerIdade(&idadeABuscar);
        i = 0;
        while(i<tamanho){

          i++;
        }
        for(i=0;i<tamanho;i++)

        printf("Encerrando... \n");
        printf(" * \n * \n * \n");
        break;
      case 9:
        printf("Encerrando... \n");
        printf(" * \n * \n * \n");
        break;
      default:
        printf("Erro: Opção inválida. \n");
        printf(" * \n * \n * \n");
