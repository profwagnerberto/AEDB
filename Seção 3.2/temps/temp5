#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){
  FILE *fl;
  int caracter;
  int tamanho = 1000;
  char temp[tamanho];
  int contaCarac;
  int dadosIdade[20];
  int contaIdade;
  fl = fopen("dadosIdade.txt", "r");
  contaCarac=0;
  strcpy(temp,"");
  contaIdade=0;
  while((caracter = fgetc(fl)) != EOF){
    if(caracter!=','){
      temp[contaCarac]=caracter;
      contaCarac++;
      printf("temp: %s \n",temp);
    }else{
      dadosIdade[contaIdade]=atoi(temp);
      printf("dadosIdade[%d]: %d \n",contaIdade,dadosIdade[contaIdade]);
      contaCarac=0;
      strcpy(temp,"");
      contaIdade++;
    }
  }        
  dadosIdade[contaIdade]=atoi(temp);
  printf("dadosIdade[%d]: %d \n",contaIdade,dadosIdade[contaIdade]);
  fclose(fl);
  return EXIT_SUCCESS;
}
